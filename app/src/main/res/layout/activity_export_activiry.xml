<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uppcl.dvvnl.combingapp.ExportActivity">

    <EditText
        android:id="@+id/ex_et_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="ACCOUNT_ID"
        android:inputType="phone" />

    <Button
        android:id="@+id/ex_bt_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ex_et_account"
        android:text="SELECT" />

    <TextView

        android:id="@+id/ex_tv_main_head"
        android:layout_width="wrap_content"
        android:layout_height="30dp" android:textStyle="bold"
        android:layout_below="@+id/ex_bt_select"
        android:layout_marginLeft="5dp"
        android:text="MAIN METER No."
        android:textSize="20dp" />

    <TextView

        android:id="@+id/ex_tv_main_meter"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/ex_tv_main_head"
        android:layout_marginLeft="5dp"

        android:text="MAIN METER No."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ex_tv_pole_head"
        android:layout_width="wrap_content" android:textStyle="bold"
        android:layout_height="30dp"
        android:layout_below="@+id/ex_bt_select"

        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ex_tv_main_head"
        android:text="POLE METER"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ex_tv_pole_meter"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/ex_tv_pole_head"
        android:layout_below="@+id/ex_tv_pole_head"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ex_tv_main_meter"
        android:text="99999999"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/ex_sp_main_meter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"


        android:layout_below="@+id/ex_tv_main_meter" />

    <Spinner
        android:id="@+id/ex_sp_pole_meter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/ex_tv_pole_meter"
        android:layout_toRightOf="@+id/ex_sp_main_meter" />

    <Spinner
        android:id="@+id/ex_sp_pre_main_meter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/ex_sp_main_meter" />

    <Spinner
        android:id="@+id/ex_sp_pre_pole_meter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/ex_sp_pole_meter"
        android:layout_toRightOf="@+id/ex_sp_main_meter" />

    <Button
        android:id="@+id/ex_bt_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ex_sp_pre_pole_meter"
        android:layout_centerHorizontal="true"
        android:text="EXPORT" />


</RelativeLayout>
