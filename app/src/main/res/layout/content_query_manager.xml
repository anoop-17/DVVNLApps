<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_query_manager"
    android:scrollbars="horizontal"
    tools:context="com.uppcl.dvvnl.combingapp.QueryManagerActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/query_create"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Query"
        android:id="@+id/bt_query_run"
        android:layout_below="@+id/query_create"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:scrollbars="horizontal"
        android:layout_width="2000dp"
        android:layout_height="wrap_content"
        android:id="@+id/query_result"
        android:layout_below="@+id/bt_query_run"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
